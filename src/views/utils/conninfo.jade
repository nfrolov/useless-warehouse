doctype html
html
  head
    title Connection Information
  body
    main
      h1 Connection Information
      section.table-container
        each table in tables
          article.table
            h2= table.name
            table.columns
              thead
                th Name
                th Type
                th Nullable
              tbody
                each column in table.columns
                  tr
                    td= column.column_name
                    td= column.data_type
                    td= column.is_nullable
            h3 Data
            if table.data.length > 0
              table.data
                thead
                  tr
                    each column in table.columns
                      th= column.column_name
                tbody
                  each row in table.data
                    tr
                    each column in row
                      td= column
            else
              p Table is currently empty
