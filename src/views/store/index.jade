extends ../layout
block content
  h1 Store
    a(href="/store/basket") View basket
  table
    thead: tr
      th ID
      th Name
      th.small Quantity
      th.small Price
      th
    tbody
      each product in products
        tr
          td= product.id
          td= product.name
          td= product.quantity
          td= product.price
          td
            form.basket-add(action="/store/basket", method="post")
              input(type="hidden", name="_method", value="patch")
              input(type="hidden", name="product_id", value=product.id)
              input.quantity(name="quantity" value=1)
              button(type="submit" title="Add to basket") +
      else
        tr.message
          td(colspan="5") No products yet

